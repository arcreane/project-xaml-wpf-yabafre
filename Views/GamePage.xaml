<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHangmanGames.Views.GamePage"
             Title="Jeu de Pendu">
    <StackLayout Padding="20">
        <Label x:Name="WordLabel"
               FontSize="Large"
               HorizontalOptions="Center" />
        <Label x:Name="LivesLabel"
               FontSize="Medium"
               TextColor="Red"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />
        <Grid x:Name="KeyboardGrid" ColumnSpacing="5" RowSpacing="5">
            <!-- Ajouter des boutons pour chaque lettre ici -->
        </Grid>
    </StackLayout>
</ContentPage>
